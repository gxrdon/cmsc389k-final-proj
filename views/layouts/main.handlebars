<script>
  var socket = io();
  $('#message_box').submit(function(){
    socket.emit('chat message', $('#inp').val());
    $('#inp').val('');
    return false;
  });

  socket.on('chat message', function(msg){
    $('#chat').append($('<li>').text(msg));
  });
</script>